{
  "compilerOptions": {
    // "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "jsx": "preserve",
    "module": "es2015",
    "target": "es2016",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    // "traceResolution":true,
    "lib": ["es2015", "dom"],
    "baseUrl": "./src",
    "paths": {
      // "paths": ["paths"],
      // "*": ["*", "path-resolve/*"],
      // "*": ["*"]
    },
    "typeRoots": ["./typings"]
  },

  "include": ["./src/**/*"]
}
